<div class="item-list-wrap">
    <% count = 0 %>
    <div class="item-list-title">
        <form action = '/itemlist/bakery/' method = "get">
            지역명으로 검색: <input class="search-text" type = "text" name = "place"></input>
            <input type = "submit" value = "검색" class=""></input>
        </form>
    </div>
    <a href = "/itemlist/bread">빵 기준으로 검색하기!</a>
        
        <div class="item-list">
            <% @bakery.each do |result| %>
                <% count += 1 %>
                <section class="bread-item">
                    <div class="item">
                        <a href = "/search/bakery/<%=result.name%>">
                            <button class="collapsible">
                                <%# <%= count %><%#번 빵집 %>
                                <ul>
                                    <li><%= image_tag(image_path("#{result.image}"), :class => "list-image" )%></li><br>
                                    <li>
                                        <span class="bakery-name"><%= result.name %></span><br>
                                    </li>
                                </ul>
                            </button>
                        </a>
                    </div>
                </section>
            <% end %>
        </div>
</div>
    <script>
        var item = document.getElementsByClassName("collapsible");
        var i;

        for (i = 0; i < item.length; i++) {
        item[i].addEventListener("click", function() {
            this.classList.toggle("active");
            var content = this.nextElementSibling;
            if (content.style.maxHeight){
                content.style.maxHeight = null;
            }
            else {
            content.style.maxHeight = content.scrollHeight + "px";
            } 
        });
        }
    </script>